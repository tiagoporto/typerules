{
  "name": "typerules-root",
  "private": true,
  "homepage": "http://tiagoporto.github.io/typerules",
  "author": {
    "name": "Tiago Porto",
    "url": "http://tiagoporto.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tiagoporto/typerules.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=23",
    "npm": "uses pnpm",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.11.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "$CI = true || editor-config",
    "prepare": "husky",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "checks": "pnpm check-docs && pnpm format:check && pnpm typecheck && pnpm lint:styles && pnpm lint",
    "check-docs": "remark --frail . --ext md,markdown,mdx",
    "check-update": "pnpm update --interactive --latest",
    "format:check": "prettier --check --ignore-unknown \"**/*\"",
    "format": "npm run format:check --write",
    "typecheck": "tsc --project tsconfig.json",
    "lint": "eslint --max-warnings 0",
    "lint:fix": "pnpm lint --fix",
    "lint:styles": "stylelint \"**/*.{css,scss}\"",
    "lint:styles:fix": "stylelint \"**/*.{css,scss}\" --fix"
  },
  "devDependencies": {
    "@anolilab/semantic-release-pnpm": "^1.1.11",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@next/eslint-plugin-next": "^15.5.4",
    "@tiagoporto/editor-config": "^2.1.0",
    "@tiagoporto/eslint-config": "^6.0.1",
    "@tiagoporto/prettier-config": "^2.1.0",
    "@tiagoporto/remark-config": "^1.11.0",
    "@tiagoporto/stylelint-config": "^1.2.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "next": "15.4.7",
    "prettier": "^3.6.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "sass-embedded": "^1.93.2",
    "semantic-release": "^24.2.5",
    "stylelint": "^16.19.1",
    "typerules": "workspace:*",
    "typescript": "^5.9.3"
  }
}
