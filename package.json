{
  "name": "typerules-root",
  "private": true,
  "homepage": "http://tiagoporto.github.io/typerules",
  "author": {
    "name": "Tiago Porto",
    "url": "http://tiagoporto.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tiagoporto/typerules.git"
  },
  "license": "MIT",
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">=24",
      "onFail": "error"
    },
    "packageManager": {
      "name": "pnpm",
      "version": ">=10",
      "onFail": "error"
    }
  },
  "packageManager": "pnpm@10.23.0",
  "type": "module",
  "scripts": {
    "postinstall": "$CI = true || editor-config",
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "check-update": "pnpm update --interactive --latest",
    "checks": "pnpm check-docs && pnpm format:check && pnpm typecheck && pnpm lint:styles && pnpm lint",
    "check-docs": "remark --frail . --ext md,markdown,mdx",
    "format:check": "prettier --check --ignore-unknown \"**/*\"",
    "format": "npm run format:check --write",
    "typecheck": "tsc --project tsconfig.json",
    "lint": "eslint --max-warnings 0",
    "lint:fix": "pnpm lint --fix",
    "lint:styles": "stylelint \"**/*.{css,scss}\"",
    "lint:styles:fix": "stylelint \"**/*.{css,scss}\" --fix"
  },
  "devDependencies": {
    "@anolilab/multi-semantic-release": "^3.2.2",
    "@anolilab/semantic-release-pnpm": "^3.2.2",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@next/eslint-plugin-next": "^16.0.7",
    "@tiagoporto/editor-config": "^2.1.0",
    "@tiagoporto/eslint-config": "^6.4.0",
    "@tiagoporto/prettier-config": "^2.1.0",
    "@tiagoporto/remark-config": "^1.11.0",
    "@tiagoporto/stylelint-config": "^1.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "lefthook": "^2.0.8",
    "next": "16.0.10",
    "prettier": "^3.7.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "sass-embedded": "^1.93.3",
    "semantic-release": "^25.0.2",
    "stylelint": "^16.26.1",
    "typerules": "workspace:*",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "conventional-changelog-conventionalcommits": ">=8.0.0"
    }
  }
}
