{
  "name": "typerules-root",
  "private": true,
  "homepage": "http://tiagoporto.github.io/typerules",
  "author": {
    "name": "Tiago Porto",
    "url": "http://tiagoporto.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tiagoporto/typerules.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=23",
    "npm": "uses pnpm",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.11.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "$CI = true || (dependabot-config && editor-config)",
    "prepare": "husky",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "checks": "pnpm format:check && pnpm check-docs && pnpm lint && pnpm lint:styles",
    "check-docs": "remark --frail . --ext md,markdown,mdx",
    "format:check": "prettier --check --ignore-unknown \"**/*\"",
    "format": "pnpm format:check -- --write",
    "lint": "eslint --max-warnings 0",
    "lint:fix": "pnpm lint -- --write",
    "lint:styles": "stylelint \"**/*.{css,scss}\"",
    "lint:styles:fix": "stylelint \"**/*.{css,scss}\" --fix",
    "test": "react-scripts test"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@tiagoporto/dependabot-config": "^2.0.0",
    "@tiagoporto/editor-config": "^2.0.0",
    "@tiagoporto/eslint-config": "^4.6.1",
    "@tiagoporto/prettier-config": "^2.0.0",
    "@tiagoporto/remark-config": "^1.6.1",
    "@tiagoporto/stylelint-config": "^1.1.1",
    "eslint": "^9.20.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-scripts": "5.0.1",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "stylelint": "^16.14.1",
    "typescript": "^5.8.3"
  }
}
